<html>
    <head>
        <title></title>
    </head>
    <body>
        <form action='/info' method='post'>
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <p>Your name <input type='text' name='survey[name]'></p>
            <p>
                Dojo Location <select name='survey[location]'>
                    <option>Mountain View</option>
                    <option>Seattle</option>
                    <option>New York</option>
                </select>
            </p>
            <p>
                Favorite Language <select name='survey[language]'>
                    <option>Ruby</option>
                    <option>Python</option>
                    <option>Javascript</option>
                </select>
            </p>
            <p>Comment (optional) <textarea name='survey[comment]'></textarea></p>
            <input type='submit' value='submit'>
        </form>
    </body>
</html>