<html>
    <head>
        <title></title>
    </head>
    <style>
        form {
            display: inline-block;
        }
        .activities {
            border: 2px solid black;
            overflow: scroll;
            height: 200px;
            color: red;
        }
    </style>
    <body>
        <p>Your gold: <%= session[:gold] %></p>
        <form action='/gold' method='post'>
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <h3>Farm</h3>
            <p>(earns 10-20 golds)</p>
            <input type='hidden' name='get_gold' value='farm'>
            <input type='submit' value='Find Gold'>
        </form>
        <form action='/gold' method='post'>
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <h3>Cave</h3>
            <p>(earns 5-10 golds)</p>
            <input type='hidden' name='get_gold' value='cave'>
            <input type='submit' value='Find Gold'>
        </form>
        <form action='/gold' method='post'>
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <h3>House</h3>
            <p>(earns 2-5 golds)</p>
            <input type='hidden' name='get_gold' value='cave'>
            <input type='submit' value='Find Gold'>
        </form>
        <form action='/gold' method='post'>
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <h3>Casino</h3>
            <p>(earns/takes 0-50 golds)</p>
            <input type='hidden' name='get_gold' value='casino'>
            <input type='submit' value='Find Gold'>
        </form>
        <p>Activities</p>
        <div class='activities'>
            <% session[:activities].each do |activity| %>
                <p><%= activity %></p>
            <% end %>
        </div>
    </body>
</html>